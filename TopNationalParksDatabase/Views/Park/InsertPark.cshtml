@model Park

<h2>Create a New Park</h2>

@using (Html.BeginForm("InsertParkToDatabase", "Park", "Post"))
{
    <input asp-for="ParkID" type="hidden" value="" />

    <label asp-for="FullName" class="control-label">Name</label>
    <input type="text" name="FullName" class="form-control" value="" />

    <label asp-for="ParkCode" class="control-label">Park Code</label>
    <input type="text" step="0.01" name="ParkCode" class="form-control" value="" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" step="0.01" name="PhoneNumber" class="form-control" value="" /> 

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" step="0.01" name="EmailAddress" class="form-control" value="" />

    <label asp-for="Website" class="control-label">Website</label>
    <input type="text" step="0.01" name="Website" class="form-control" value="" />

    

    <input type="submit" value="Create Park" class="btn btn-primary" />
}
