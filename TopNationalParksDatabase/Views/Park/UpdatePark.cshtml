@model Park

<h2>Update @Model.FullName</h2>

@using (Html.BeginForm("UpdateParkToDatabase", "Park", "Post"))
{
    <input asp-for="ParkID" type="hidden" value="@Model.ParkID" />

    <label asp-for="FullName" class="control-label">Name</label>
    <input type="text" name="FullName" class="form-control" value="@Model.FullName" />

    <label asp-for="ParkCode" class="control-label">Park Code</label>
    <input type="text" step="0.01" name="ParkCode" class="form-control" value="@Model.ParkCode" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" step="0.01" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" step="0.01" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />

    <label asp-for="Website" class="control-label">Website</label>
    <input type="text" step="0.01" name="Website" class="form-control" value="@Model.Website" />

    
    <input type="submit" value="Update Park" class="btn btn-primary" />
    
}
