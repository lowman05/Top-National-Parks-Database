@model Park

<h3>@Model.FullName Information</h3>

<table class="table">
    <tr>
        <th>Park ID</th>
        <th>Name</th>
        <th>Park Code</th>
        <th>Phone Number</th>
        <th>Email Address</th>
        <th>Website</th>
    </tr>
    <tr>
        <td>@Model.ParkID</td>
        <td>@Model.FullName</td>
        <td>@Model.ParkCode</td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.EmailAddress</td>
        <td>@Model.Website</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Park/UpdatePark/@Model.ParkID">Update this Park</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeletePark", "Park", "Post"))
    {
        <input type="hidden" asp-for="ParkID" value="@Model.ParkID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this park" />
    }
</div>
